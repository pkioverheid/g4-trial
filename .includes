
genpkeyopt="-algorithm RSA -pkeyopt rsa_keygen_bits:4096"
sigopt="-sigopt rsa_padding_mode:pss -sigopt rsa_pss_saltlen:64"
reqopt="-config openssl.cnf ${sigopt} -new"
caopt="-config openssl.cnf ${sigopt} -batch -notext -rand_serial"
crlopt="-gencrl -config openssl.cnf ${sigopt}"

rootdays=368
intermediatedays=367
issuingdays=366
eedays=365

PRIVATE_DIR=ca/private
CERT_DIR=ca/certs
CRL_DIR=ca/crl
CSR_DIR=ca/csr